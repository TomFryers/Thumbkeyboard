  . .  |  o <
  . .  |  . . ] :backspace bind!

[ . .  |  . .
  . .  |  > <
  . .  |  . . ] :C-backspace bind!


[ . .  |  . o
  . .  |  . ^
  . .  |  . . ] :delete bind!

[ . .  |  . v
  . .  |  . ^
  . .  |  . . ] :C-delete bind!

;; old-school emoji

[ . .  |  . .
  . .  |  v o
  . .  |  > ^ ] ":)" bind!

[ . .  |  . o
  . .  |  v ^
  . .  |  > ^ ] ":-)" bind!

[ . .  |  > v
  . .  |  ^ v
  . .  |  . o ] ":-(" bind!

[ . .  |  . .
  . .  |  > v
  . .  |  ^ o ] ":(" bind!

[ . .  |  . .
  . .  |  > o
  . .  |  . . ] :TAB bind!


