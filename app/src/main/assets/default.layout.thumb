  > o  |  . o
  . .  |  . . ] "±" bind!


;; shifted number keys

[ . .  |  v .
  . .  |  v .
  . .  |  o . ] :! bind! ;; :S-1

[ o .  |  . .
  ^ <  |  . .
  . .  |  . . ] :@ bind! ;; :S-2

[ o .  |  . .
  ^ .  |  . .
  ^ <  |  . . ] :# bind! ;; :S-3

[ v <  |  . .
  > v  |  . .
  o <  |  . . ] :$ bind! ;; :S-4

[ o .  |  . .
  ^ .  |  . .
  ^ .  |  . . ] :% bind! ;; :S-5

[ v .  |  . .
  ^ .  |  . .
  ^ .  |  . . ] :^ bind! ;; :S-6

;;[ o .  |  . .
;;  ^ .  |  . .
;;  . .  |  . . ] :& bind! ;; :S-7

[ . .  |  . v
  . .  |  > <v
  . .  |  o  < ] :* bind! ;; :S-8

;; and grouping symbols

[ . .  |  . .
  . .  |  x .
  x .  |  . . ] "(" bind! ;; :S-9

[ . .  |  . .
  . .  |  x .
  . x  |  . . ] ")" bind! ;; :S-0

[ . .  |  . .
  . x  |  . .
  . .  |  > o ] :[ bind!

[ . .  |  . .
  . x  |  . .
  . .  |  o < ] :] bind!

[ . .  |  . .
  . .  |  . .
  x .  |  > o ] :< bind!

[ . .  |  . .
  . .  |  . .
  x .  |  o < ] :> bind!

[ . .  |  . .
  . .  |  . .
  . x  |  > o ] :{ bind!

[ . .  |  . .
  . .  |  . .
  . x  |  o < ] :} bind!


;; quotes

[ . .  |  x .
  . .  |  . .
  x .  |  . . ] "’" bind!

[ v .  |  . .
  > o  |  . .
  . .  |  . . ] :` bind!

[ v .  |  . .
  > v  |  . .
  . o  |  . . ] :" bind! ;;"


